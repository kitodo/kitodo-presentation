                <type>array</type>
                <el>
                    <settings.paginate.itemsPerPage>
                        <exclude>1</exclude>
                        <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:plugins.pagegrid.limit</label>
                        <config>
                            <type>input</type>
                            <eval>required,num,int</eval>

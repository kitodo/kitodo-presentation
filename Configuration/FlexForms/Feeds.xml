<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.sheet_general</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.collections>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.collections</label>
                            <config>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>tx_dlf_collections</foreign_table>
                                <foreign_table_where>AND tx_dlf_collections.hidden = 0 AND tx_dlf_collections.sys_language_uid IN (-1,0)
                                    ORDER BY tx_dlf_collections.label ASC
                                </foreign_table_where>
                                <size>5</size>
                                <autoSizeMax>15</autoSizeMax>
                                <maxitems>1024</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.collections>
                    <settings.excludeOther>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.excludeOtherCollections</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.excludeOther>
                    <settings.library>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.library</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <foreign_table>tx_dlf_libraries</foreign_table>
                                <foreign_table_where>AND tx_dlf_libraries.sys_language_uid IN (-1,0)
                                    ORDER BY tx_dlf_libraries.label ASC
                                </foreign_table_where>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.library>
                    <settings.limit>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.limit</label>
                            <config>
                                <type>input</type>
                                <eval>required,num,int</eval>
                                <default>50</default>
                            </config>
                        </TCEforms>
                    </settings.limit>
                    <settings.prependSuperiorTitle>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.prependSuperiorTitle</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.prependSuperiorTitle>
                    <settings.targetPid>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.targetPidPageView</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.targetPid>
                    <settings.title>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:plugins.feeds.flexform.title</label>
                            <config>
                                <type>input</type>
                                <eval>required,trim</eval>
                            </config>
                        </TCEforms>
                    </settings.title>
                    <settings.description>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:plugins.feeds.flexform.description</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.description>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>

<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.sheet_general</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.solrcore>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.solrcore</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <foreign_table>tx_dlf_solrcores</foreign_table>
                                <foreign_table_where>ORDER BY tx_dlf_solrcores.label ASC</foreign_table_where>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.solrcore>
                    <settings.limit>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:plugins.listview.flexform.limit</label>
                            <config>
                                <type>input</type>
                                <eval>required,num,int</eval>
                                <default>25</default>
                            </config>
                        </TCEforms>
                    </settings.limit>
                    <settings.targetPidPageView>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.targetPidPageView</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.targetPidPageView>
                    <settings.getTitle>
                        <TCEforms>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.getTitle</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.getTitle>
                    <settings.basketButton>
                        <TCEforms>
                            <onChange>reload</onChange>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.showBasketButton</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.basketButton>
                    <settings.targetBasket>
                        <TCEforms>
                            <displayCond>FIELD:settings.basketButton:REQ:true</displayCond>
                            <label>LLL:EXT:dlf/Resources/Private/Language/locallang_be.xlf:flexform.targetBasket</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>1</minitems>
                            </config>
                        </TCEforms>
                    </settings.targetBasket>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
